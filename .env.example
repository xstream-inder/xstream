# Database
DATABASE_URL="postgresql://user:password@localhost:5432/xstream"
DIRECT_URL="postgresql://user:password@localhost:5432/xstream"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-here-generate-with-openssl-rand-base64-32"

# Bunny Stream Configuration
BUNNY_LIBRARY_ID="your-library-id"
BUNNY_API_KEY="your-api-key"
BUNNY_CDN_HOSTNAME="your-cdn-hostname.b-cdn.net"

# Webhook Security (Optional but recommended)
BUNNY_WEBHOOK_SECRET="your-webhook-secret-key"

# Bunny Edge Storage (for avatars, images)
# Create a Storage Zone in bunny.net dashboard -> Storage
# The password is in Storage Zone -> FTP & API Access
BUNNY_STORAGE_ZONE="xstream-photos"
BUNNY_STORAGE_PASSWORD="2ee30dff-b405-4394-997c2a84435f-4c5a-4e52"
BUNNY_STORAGE_REGION="ny"  # empty for Falkenstein (default), or: ny, la, sg, syd, uk, se, br, jh
BUNNY_STORAGE_PULL_ZONE="xstream-assets.b-cdn.net"  # Pull Zone hostname linked to the storage zone

# Upstash Redis (for high-performance likes/views counting)
UPSTASH_REDIS_REST_URL="https://your-redis-endpoint.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"

# Cron Job Security (for syncing Redis to DB)
CRON_SECRET="generate-a-strong-random-secret-for-cron-jobs"
